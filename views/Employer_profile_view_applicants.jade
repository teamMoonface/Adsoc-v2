doctype html
html(lang='en')

header
    title #{title} #{job.name}
    include header
    link(rel='stylesheet', href='/stylesheets/nav1.css')
    link(rel='stylesheet', href='/stylesheets/viewApplicants.css')
    link(href="https://fonts.googleapis.com/css?family=Bubbler+One|Fira+Sans+Extra+Condensed|Quicksand|Roboto" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet")
    
    script(src='/javascripts/jobView.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js',integrity='sha384-c5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')

body
    include navbar
    .container    
        
        h2 #{title} : #{job.name}
        br
        if job.applicants.length > 0
            each student in job.applicants
                .viewApplicants
                    .row
                        .col-xs-4
                            img#profile-pic2(src='/images/man1.png', alt='profile pic')
                        .col-xs-8
                            h2
                                strong #{student.name}
                            #profile-details
                                p
                                    strong Gender: 
                                    if(student.gender==undefined)
                                        | -
                                    else
                                        | #{student.gender}
                                p
                                    strong DOB: 
                                    if(student.dob==undefined)
                                        | -
                                    else
                                        | #{student.date_of_birth_formatted}
                                p
                                    strong Email: 
                                    | #{student.email}
                                p
                                    strong Phone Number: 
                                    if(student.phoneNum==undefined)
                                        | -
                                    else
                                        | #{student.phoneNum}
                                p
                                    strong About Me: 
                                    if(student.aboutme==undefined)
                                        | -
                                    else
                                        | #{student.aboutme}
                                p
                                    strong Skills:
                                br
        else
            p No applicants yet!