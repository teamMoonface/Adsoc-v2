extends dashboard_layout

block title
    title #{title}

block navbar
    include navbar_employer
    
block sidebar
    .employer-sidebar
      .user-info
        br
        img#profile-pic(src='/images/employer-default-profile-pic.png', alt='profile pic')
        h4
          strong Google
        p someone@example.com
      ul.nav.nav-pills.nav-stacked
        li.active
          a(href='/employerDB/postedjobs')
            | Posted Jobs
            span.glyphicon.glyphicon-chevron-right.pull-right
        li
          a(href='/employerDB/postjob')
            | Post a Job
            span.glyphicon.glyphicon-chevron-right.pull-right
        li
          a(href='/employerDB/profile')
            | Profile
            span.glyphicon.glyphicon-chevron-right.pull-right
        li
          a(href='#')
            | Log Out
            span.glyphicon.glyphicon-chevron-right.pull-right

block content
    .postedjobs-panel
      h2
        strong Posted Jobs
      br
      
      if postedJobs
          each job in postedJobs
             .job-post
                h3 #{job.name}
                .row
                  .col-xs-9
                    p
                      small 'Period:' + #{job.startDate} '- ' + #{job.endDate}
                      // TODO: format date
                  .col-xs-3.salary
                    p '$' + #{job.remun} + ' /hr'
                hr
                // job description
                p
                  | #{job.desc}
                br
                button.btn.btn-info
                  | View Applicants 
                  span.badge 5
                button.btn.btn-danger.pull-right Remove Post
              br
        else
            p No posted jobs!
